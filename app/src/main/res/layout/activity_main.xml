<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main" />

    <View
        android:id="@+id/main_background_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="top"
        android:background="@drawable/header_background"
        android:elevation="4dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="DroidMirror"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

    </FrameLayout>


    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="88dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/glassmorphic_background"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="12dp"
                    android:text="@string/label_server_ip"
                    android:textAppearance="@android:style/TextAppearance"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.1"
                    android:background="@drawable/input_field_background"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText_server_host"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:minHeight="44dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="#80FFFFFF"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck" />

                    <FrameLayout
                        android:id="@+id/history_list"
                        android:layout_width="40dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_selector">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/down" />
                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/glassmorphic_background"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="12dp"
                    android:text="@string/label_video_resolution"
                    android:textAppearance="@android:style/TextAppearance"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_video_resolution"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:background="@drawable/spinner_selector"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/options_resolution_values"
                    android:minHeight="44dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:textColor="@color/white"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/glassmorphic_background"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="12dp"
                    android:text="@string/label_video_bitrate"
                    android:textAppearance="@android:style/TextAppearance"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinner_video_bitrate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:background="@drawable/spinner_selector"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/options_bitrate_keys"
                    android:minHeight="44dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/glassmorphic_background"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="12dp"
                    android:text="@string/delay_control"
                    android:textAppearance="@android:style/TextAppearance"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/delay_control_spinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:background="@drawable/spinner_selector"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/options_delay_keys"
                    android:minHeight="44dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:textColor="@color/white"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </LinearLayout>

            <Switch
                android:id="@+id/switch0"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphic_background"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/switch0"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphic_background"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/switch1"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <Switch
                android:id="@+id/switch_screen_off"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:background="@drawable/glassmorphic_background"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/switch_screen_off"
                android:textColor="@color/white"
                android:textSize="15sp" />


            <Button
                android:id="@+id/button_start"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="@drawable/start_button_selector"
                android:text="@string/action_start"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
